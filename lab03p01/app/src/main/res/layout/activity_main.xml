<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66"/>

    <EditText
        android:id="@+id/et_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:hint="a:"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="25sp"/>
    <EditText
        android:id="@+id/et_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_a"
        android:layout_margin="20dp"
        android:hint="b:"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="25sp"/>
    <EditText
        android:id="@+id/et_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_b"
        android:layout_margin="20dp"
        android:hint="c:"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btn_licz"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Licz"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gl_01"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"/>
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_01"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
         />

    <TextView
        android:id="@+id/tv_wynik"
        tools:text="To jest przykładowy tekst, którt pojawi się w okienku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_c"
        app:layout_constraintBottom_toTopOf="@id/btn_licz"
        android:textSize="25sp"
        android:padding="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>